
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    
    <div class= "input-group-append">
        <% if (user) { %> 
          <form method="POST" action="/logout" class ="nav-item">
            <div class="input-group-append">
              <a class ="nav-item nav-link" >hello, <%= user.email %>! </a> 
              <button type="submit" id="button-addon2">Logout!</button>
            </div>
          </form>
          <% } else{ %>
            <form method="POST" action="/login" class ="nav-item">
              <div class="input-group-append">
                <input type="form" class="form-control" placeholder= "enter username" name= "username" >
                <button type="submit" id="button-addon2">Login!</button>
              </div>
              <% } %>
            </form>
          </div>
  </nav>
